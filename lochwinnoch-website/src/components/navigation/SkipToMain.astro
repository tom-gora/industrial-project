<script>
  document.addEventListener("astro:page-load", () => {
    const skipToMain = document.querySelector("#skip-to-main");
    const mainContent: HTMLElement | null = document.querySelector("#main-content");
    const firstElementOfMain: HTMLElement | null = document.querySelector("#main-content :is(h1,h2,h3,h4,h5,h6):first-of-type");
    const scrollOffset = firstElementOfMain ? firstElementOfMain.offsetHeight : 24;
    skipToMain?.addEventListener("click", () => {
      if (firstElementOfMain) {
        window.scrollTo({
          top: firstElementOfMain?.offsetTop - scrollOffset,
          behavior: "smooth"
        });
      }
      mainContent?.focus();
    });
  });
</script>
