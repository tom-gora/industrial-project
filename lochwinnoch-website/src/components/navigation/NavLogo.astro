---
import { getConfig } from "../../utils/directus-utils";

const siteConfig = await getConfig();
const DIRECTUS_URL: string = import.meta.env.DIRECTUS_URL;

const logo = {
  src: `${DIRECTUS_URL}/assets/${siteConfig?.logo?.id}` || "",
  alt: siteConfig?.logo?.description || ""
};
---

<a
  href="/"
  class="logo bg-main z-30 flex w-fit translate-x-4 flex-row-reverse flex-nowrap items-center justify-start gap-8 px-4 transition-transform duration-150 sm:-translate-x-8 sm:flex-row sm:justify-between"
>
  {
  <img src={logo.src} alt={logo.alt || ""} class="max-h-8 sm:max-h-12 md:max-h-16" />
<div class="text-theme-main font-serif text-2xl font-medium">{siteConfig.title}</div>
}
</a>

<style>
body:has(#skip-to-main:focus-within) a.logo {
  /*nice hack cuz if you offer skipping navigation then just get rid of naavigation while option is showing I'm A GENIUS*/
  @apply pointer-events-none translate-x-32 pr-[100vw];
}
</style>
