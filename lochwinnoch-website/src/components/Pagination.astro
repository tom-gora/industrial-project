---
import ArrowLeft from "../icons/ArrowLeft.astro";
import ArrowRight from "../icons/ArrowRight.astro";
import IconButton from "./IconButton.astro";

const { page, class: className } = Astro.props;
const { current, last } = page;
---

<nav aria-label="Pagination" class:list={["px-12 py-2 relative text-center", className]}>
  {
    page.url.prev && (
      <IconButton class="absolute left-0 top-1/2 -translate-y-1/2" href={`?page=${page.url.prev}`} aria-label={`Go to page ${current - 1} of ${last}`}>
        <ArrowLeft class="h-5 w-5 fill-current" />
      </IconButton>
    )
  }
  <span class="text-sm" aria-current="page">Page {current} of {last}</span>
  {
    page.url.next && (
      <IconButton class="absolute right-0 top-1/2 -translate-y-1/2" href={`?page=${page.url.next}`} aria-label={`Go to page ${current + 1} of ${last}`}>
        <ArrowRight class="h-5 w-5 fill-current" />
      </IconButton>
    )
  }
</nav>
